@inherits LayoutComponentBase

<style>
    .login-page {
        min-height: 100vh;
        display: grid;
        grid-template-columns: 1.15fr 1fr;
        padding: 48px 56px;
        gap: 28px;
        background: linear-gradient(135deg, #46d3a5 0%, #5bb7ff 100%);
        align-items: center;
        justify-items: center;
    }

    .login-page .auth-visual {
        background: url('https://images.unsplash.com/photo-1521737604893-d14cc237f11d?auto=format&fit=crop&w=1400&q=80') center/cover no-repeat;
        border-radius: 14px 0 0 14px;
        position: relative;
        overflow: hidden;
        min-height: 520px;
        width: 100%;
    }

    .login-page .overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(34, 148, 96, 0.78), rgba(22, 112, 187, 0.74));
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 28px;
        color: #e9f4ff;
    }

    .login-page .auth-logo {
        font-size: 1.3rem;
        font-weight: 800;
        letter-spacing: 0.08em;
    }

    .login-page .testimonial {
        margin-top: auto;
    }

    .login-page .quote {
        font-size: 1.05rem;
        font-weight: 700;
        line-height: 1.5;
        color: #d8e9ff;
        margin: 0 0 10px;
    }

    .login-page .author {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #d8e9ff;
        font-weight: 700;
    }

    .login-page .author .dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: #3bd4a1;
    }

    .login-page .auth-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 0 14px 14px 0;
        padding: 46px 44px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 520px;
        box-shadow: 0 24px 48px rgba(0, 0, 0, 0.15);
        width: 100%;
    }

    .login-page .white-card {
        background: #ffffff;
        border: 1px solid #e8edf5;
        border-radius: 10px;
        padding: 14px;
    }

    .login-page .auth-card__body {
        width: 100%;
        max-width: 480px;
        padding: 8px 6px 0;
    }

    .login-page .auth-card__header h3 {
        font-size: 1.5rem;
        margin: 0 0 4px;
        color: #27364a;
    }

    .login-page .auth-card__header .muted {
        margin: 0 0 16px;
        color: #75839c;
    }

    .login-page .auth-form {
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    .login-page .field {
        display: flex;
        flex-direction: column;
        gap: 6px;
        color: #1f2c3d;
        font-weight: 600;
    }

    .login-page .field-top {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .login-page .text-input {
        padding: 12px 12px;
        border-radius: 8px;
        border: 1px solid #d7deea;
        background: #f8fafe;
        color: #1f2c3d;
        outline: none;
        transition: border-color 140ms ease, box-shadow 140ms ease, background 140ms ease;
    }

    .login-page .text-input:focus {
        border-color: #66c7ff;
        box-shadow: 0 0 0 3px rgba(102, 199, 255, 0.28);
        background: #ffffff;
    }

    .login-page .remember {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #4a5568;
        font-weight: 600;
    }

    .login-page .checkbox {
        width: 18px;
        height: 18px;
    }

    .login-page .auth-btn {
        margin-top: 6px;
        width: 100%;
        padding: 12px 14px;
        border-radius: 8px;
        border: none;
        font-weight: 800;
        font-size: 1rem;
        cursor: pointer;
        background: #35c26b;
        color: #f4fff7;
        box-shadow: 0 12px 20px rgba(53, 194, 107, 0.32);
        transition: transform 120ms ease, box-shadow 140ms ease, background 120ms ease;
    }

    .login-page .auth-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 16px 26px rgba(53, 194, 107, 0.35);
    }

    .login-page .auth-error {
        background: rgba(255, 99, 71, 0.12);
        border: 1px solid rgba(255, 99, 71, 0.4);
        color: #c94c3f;
        padding: 10px 12px;
        border-radius: 8px;
        font-weight: 700;
    }

    .login-page .link {
        text-decoration: none;
        color: #66c7ff;
        font-weight: 600;
    }

    .login-page .link:hover {
        text-decoration: underline;
    }

    @@media (max-width: 1100px) {
        .login-page {
            grid-template-columns: 1fr;
            padding: 24px;
        }

        .login-page .auth-visual {
            border-radius: 12px 12px 0 0;
            min-height: 280px;
        }

        .login-page .auth-card {
            border-radius: 0 0 12px 12px;
        }
    }
</style>

<div class="auth-shell login-page">
    <div class="auth-visual">
        <div class="overlay">
            <div class="auth-logo">ChurchSuite Church</div>
            <div class="testimonial">
                <p class="quote">O cuidado com pessoas começa com líderes conectados.</p>
                <div class="author">
                    <div class="dot"></div>
                    <span>Equipe ChurchSuite</span>
                </div>
            </div>
        </div>
    </div>
    <div class="auth-card white">
        @Body
    </div>
</div>
