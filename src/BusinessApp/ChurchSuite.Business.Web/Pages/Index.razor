@page "/"

<section class="hero-panel">
    <div>
        <p class="kicker">Bom dia, equipe!</p>
        <h1>Bem-vindo ao ChurchSuite (Business)</h1>
        <p class="muted">Aqui está o pulso rápido do faturamento.</p>
    </div>
</section>

<section class="metrics-grid">
    <div class="metric-card up">
        <div class="label">Total Earnings</div>
        <div class="value">$559.25k</div>
        <div class="muted">+16.24% vs. mês anterior</div>
    </div>
    <div class="metric-card down">
        <div class="label">Orders</div>
        <div class="value">36,894</div>
        <div class="muted">-3.57% vs. mês anterior</div>
    </div>
    <div class="metric-card up">
        <div class="label">Customers</div>
        <div class="value">183.35M</div>
        <div class="muted">+29.08% vs. mês anterior</div>
    </div>
    <div class="metric-card">
        <div class="label">My Balance</div>
        <div class="value">$165.89k</div>
        <div class="muted">+0.00% este mês</div>
    </div>
</section>

<section class="two-column">
    <div class="card large">
        <div class="card-header">
            <div>
                <div class="label">Revenue</div>
                <div class="muted">Resumo de pedidos, ganhos e reembolsos</div>
            </div>
            <div class="chip-row">
                <span class="chip">ALL</span>
                <span class="chip">1M</span>
                <span class="chip">6M</span>
                <span class="chip">1Y</span>
            </div>
        </div>
        <div class="placeholder-chart">Gráfico de receita</div>
    </div>
    <div class="card large">
        <div class="card-header">
            <div class="label">Sales by Locations</div>
            <button class="ghost-btn">Export</button>
        </div>
        <div class="placeholder-map">Mapa de vendas por localização</div>
    </div>
</section>
